<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				autoDrawBackground="true"
				creationComplete="itemrenderer_creationCompleteHandler(event)">
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			[Bindable]
			private var _data:Object;
			
			[Bindable]
			private var bgColor:uint = 0xEFEFEF;
			
			[Bindable]
			private var fontColor:uint = 0x573333;
			
			private var wizardWin:WizardWindow;
			
			
			override public function set data(value:Object):void{
				super.data = value;
				
				if(data.selected){
					bgColor = 0x2B5480;
					fontColor = 0xFFFFFF;
				}else{
					bgColor = 0xEFEFEF;
					fontColor = 0x573333;
				}
			}
			
			protected function hgroup1_mouseOverHandler(event:MouseEvent):void
			{
				if(!data.selected)
				{
					bcItem.setStyle("backgroundColor", "#5F7E9F");
				}
			}
			
			protected function hgroup1_mouseOutHandler(event:MouseEvent):void
			{
				if(!data.selected)
				{
					bcItem.setStyle("backgroundColor", "#EFEFEF");
				}
			}
			
			protected function hgroup1_clickHandler(event:MouseEvent):void
			{
				event.stopImmediatePropagation();
				
				data.selected = true;
				
				var wizardEvent:WizardEvent = new WizardEvent(WizardEvent.NAV_LABEL_CLICK);
				wizardEvent.data = data;
				
				this.wizardWin.dispatchEvent(wizardEvent);
			}
			
			protected function itemrenderer_creationCompleteHandler(event:FlexEvent):void
			{
				this.wizardWin = this['outerDocument'] as WizardWindow;
			}
			
		]]>
	</fx:Script>
	
	<s:HGroup width="100%" click="hgroup1_clickHandler(event)" enabled="{data.checked}"
			  mouseOut="hgroup1_mouseOutHandler(event)" mouseOver="hgroup1_mouseOverHandler(event)"
			  paddingLeft="5" paddingRight="5" paddingTop="5" verticalAlign="middle">
		<s:Image visible="{data.checked}" source="@Embed('/assets/images/checkmark.png')"/>
		<s:BorderContainer id="bcItem" width="100%" height="20" backgroundColor="{bgColor}"
						   borderVisible="false" borderWeight="0" color="{fontColor}"
						   cornerRadius="5" fontWeight="bold">
			<s:VGroup height="100%" paddingLeft="10" verticalAlign="middle">
				<s:Label text="{data.index}  {data.label}"/>
			</s:VGroup>
		</s:BorderContainer>
	</s:HGroup>
	
</s:ItemRenderer>
